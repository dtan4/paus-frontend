<!DOCTYPE html>
<html>
  <head>
    <title>Paus</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
  </head>
  <body>
    <div class="container">
      <h1>{{ .user }}</h1>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Application list</h3>
        </div>
        <div class="panel-body">
          {{ if .error }}
          <div class="alert alert-danger" role="alert">
            {{ .message }}
          </div>
          {{ else }}
          <div class="list-group">
            {{ range .apps }}<a class="list-group-item" href="/users/{{ $.user }}/apps/{{ . }}">{{ . }}</a>{{ else }}No application found{{ end }}
          </div>
          {{ end }}
        </div>
        <div class="panel-footer">
          {{ if .error }}
          {{ else }}
          <form class="form-inline" method="POST" action="/users/{{ .user }}/apps">
            <div class="form-group">
              <input type="text" class="form-control" id="appNameInput" name="appName" placeholder="Application name">
            </div>
            <button type="submit" class="btn btn-primary">Create new Application</button>
          </form>
          {{ end }}
        </div>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
  </body>
</html>
